@model ProveedorTuTienditaPS4.Models.ViewModels.ProveedorVentaViewModels
@Styles.Render("~/Dashboard/DataTable/css")
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Button Example <small>Users</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-plus"></i>  New Pack</button>

                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @using (Html.BeginForm("GuardarPack", "Home", FormMethod.Post, new { @class = "row form-horizontal", @id = "formNewPack" }))
                                    {
                                        @Html.ValidationSummary(true)
                                        @Html.AntiForgeryToken()
                                        <div class="item form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                                Email <span class="required">*</span>
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control col-md-7 col-xs-12" , @name = "name", @placeholder = "Email", @required = "required", @type = "email" })
                                            </div>
                                        </div>
                                        <div class="item form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                                USD <span class="required">*</span>
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                @Html.TextBoxFor(c => c.Usd, new { @class="form-control col-md-7 col-xs-12", @name="name", @placeholder="Price" , @required="required", @type="number"})
                                            </div>
                                        </div>
                                        <div class="item form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                                Pack <span class="required">*</span>
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                @Html.TextAreaFor(c => c.Descripcion, new { @class="form-control col-md-7 col-xs-12", @placeholder = "Descripcion Pack", @required = "required" })
                                            </div>
                                        </div>
                                        <input type="submit" value="Save" class="submint btn btn-primary" />
                                    }
                                    </div>
                                    @*<div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <input type="button" value="Save" class="submint btn btn-primary" />
                                    </div>*@    
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table-pack" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>idProveedorVenta</th>
                            <th>Email</th>
                            <th>USD</th>
                            <th>Description</th>
                            <th>State</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    @section scripts{
        @Scripts.Render("~/Dashboard/DataTable/js")
        <script src="~/assets/Index/Index.js"></script>
    }
